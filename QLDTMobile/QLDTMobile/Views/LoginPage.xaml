    <ContentPage.Content>
        <StackLayout Spacing="14" Padding="48,0,48,0" VerticalOptions="CenterAndExpand">
            <StackLayout HeightRequest="80" VerticalOptions="Center" Spacing="0" >
                <Label Text="Login / User Name" FontSize="20" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" FontFamily="FS-Regular" TextColor="Blue"/>
                <Entry Text="{Binding Username}" AutomationId="username" Placeholder="Enter your login / user name" />
            </StackLayout>
            <StackLayout HeightRequest="80" VerticalOptions="Center" Spacing="0" >
                <Label Text="Password" FontSize="20" HorizontalTextAlignment="Start" VerticalTextAlignment="Center" FontFamily="FS-Regular" TextColor="Blue"/>
                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal" Spacing="0" VerticalOptions="FillAndExpand">
                    <Entry Text="{Binding Password}" x:Name="PasswordEntry" AutomationId="password" HorizontalOptions="FillAndExpand" IsPassword="True" Placeholder="Enter your password" />
                </StackLayout>
            </StackLayout>
